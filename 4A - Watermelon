#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define fast ios_base::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
 
int main()
{
    fast
    ll t;
    cin >> t;
    while (t--)
    {
    
    string s;
    cin >> s;
    if(s.length() > 10){
        cout << s[0] << s.length()-2 << s[s.length()-1] << endl;
    }
    else{
        cout << s << endl;
    }
   
}
}
